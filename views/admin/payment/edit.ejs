<%- include('../../partials/header') %>  
<%- include('../../partials/navbar') %>  
<%- include('../../partials/sidebar') %>  

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Jenis Pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Add</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
              <!-- general form elements -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form tambah payment</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="type">Tipe</label>
                      <input type="text" class="form-control" name="type" value="<%= payment.type %>" id="type" placeholder="Masukan tipe" required>
                    </div>
                    <div class="form-group">
                      <label>Bank</label>
                      <div class="select2-purple">
                        <select class="form-control select2" multiple="multiple" data-placeholder="Pilih bank" style="width: 100%;" name="banks" required>
                          <% banks.forEach(bank => { %>
                            <option value="<%= bank._id %>"
                              <% payment.banks.forEach(paymentBank => { %>
                                <% if (bank._id.toString() === paymentBank._id.toString()) { %>
                                  selected
                                <% } %>
                              <% }) %>
                            >
                              <%= bank.name %> - <%= bank.bankName %> - <%= bank.noRekening %></option>
                          <% }) %>
                        </select>
                      </div>
                    </div>
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include('../../partials/footer') %>  
<%- include('../../partials/js') %>  
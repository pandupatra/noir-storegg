<%- include('../../partials/header') %>  
<%- include('../../partials/navbar') %>  
<%- include('../../partials/sidebar') %>  

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Add</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
              <!-- general form elements -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form tambah nominal</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/create" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label>Nama koin</label>
                      <select class="form-control select2" style="width: 100%;" name="coinName" required>
                        <option selected="selected">Pilih koin</option>
                        <option value="Gold">Gold</option>
                        <option value="Diamond">Diamond</option>
                        <option value="Jewel">Jewel</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="coinQuantity">Masukan jumlah coin</label>
                      <input type="number" class="form-control" name="coinQuantity" id="coinQuantity" placeholder="Masukan jumlah coin" required>
                    </div>
                    <div class="form-group">
                      <label for="price">Masukan harga</label>
                      <input type="number" class="form-control" name="price" id="price" placeholder="Masukan harga" required>
                    </div>
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include('../../partials/footer') %>  
<%- include('../../partials/js') %>  